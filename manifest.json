{
	"manifest_version": 2,

	"name": "Kaishi",
	"description": "Replaces the newtab page with a simple image according to the time of day and clock.",
	"version": "2.0",

	"options_ui": {
		"page": "config.html",
		"chrome_style": true
	},

	"permissions": [
          "storage",
          "https://api.imgur.com/*"
        ],

	"chrome_url_overrides":{
		"newtab" : "newTab.html"
	},

	"icons": { 
			"16": "Kaishi16.png",
			"32": "Kaishi32.png",
        	"48": "Kaishi48.png",
        	"128": "Kaishi128.png"
      }
}